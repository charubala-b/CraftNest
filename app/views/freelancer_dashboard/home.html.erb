    <div class="<%= contract.completed? ? 'contract-card' : (contract.end_date < Date.today ? 'red-card' : 'water-card') %>"
     style="background: <%= contract.completed? ? '#d1f7dc' : (contract.end_date < Date.today ? '#f7b7b7' : '#f0f5fb') %>; 
