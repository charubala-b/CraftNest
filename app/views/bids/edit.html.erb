<div id="flash-messages" class="position-fixed top-0 end-0 p-3" style="z-index: 1050;">
  <% flash.each do |key, message| %>
    <div class="alert alert-<%= key == "notice" ? "success" : "danger" %> alert-dismissible fade show" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>


<h2>Edit Bid for <%= @project.title %></h2>

<%= form_with model: [@project, @bid], local: true , data: {turbo: false} do |f| %>
  <%= f.text_area :cover_letter, placeholder: "Update your cover letter" %>
  <%= f.number_field :proposed_price, placeholder: "New proposed price" %>
  <%= f.submit "Update Bid", class: "btn btn-primary" %>
<% end %>


<script>
  document.addEventListener("DOMContentLoaded", () => {
    const alert = document.querySelector('.alert');
    if (alert) {
      setTimeout(() => {
        alert.classList.remove("show");
        alert.classList.add("fade");
        alert.remove();
      }, 3000);
    }
  });
</script>