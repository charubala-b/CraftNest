<div class="form-container">
  <%= form_tag(login_path, method: :post) do %>
    <h2>Login</h2>

    <% if flash[:alert] %>
      <div class="form-alert alert"><%= flash[:alert] %></div>
    <% end %>

    <div class="form-group">
      <%= label_tag :email, "Email" %>
      <%= email_field_tag :email, nil, required: true, placeholder: "Enter your email" %>
    </div>

    <div class="form-group">
      <%= label_tag :password, "Password" %>
      <%= password_field_tag :password, nil, required: true, placeholder: "Enter your password" %>
    </div>

    <%= submit_tag "Login", class: "form-submit" %>

    <div class="form-link">
      <%= link_to "Don't have an account? Register", register_path %>
    </div>
  <% end %>
</div>
